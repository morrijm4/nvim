CC = g++
CMD = plts
SRC = main.cpp
CFLAGS = -g -Wall -Wextra -o $(CMD) -fsanitize=address -fno-omit-frame-pointer -std=c++17

$(CMD): $(SRC)
	$(CC) $(CFLAGS) $(SRC)

run: $(CMD)
	./$(CMD)

clean:
	rm $(CMD)

install: $(CMD)
	cp $(CMD) /usr/local/bin

flags:
	echo "$(CXXFLAGS)" | tr ' ' '\n' > compile_flags.txt
